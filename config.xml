<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets" id="com.gotransitapp.birmingham" version="1.6.4">
    <name>Go Birmingham</name>
    <description>Real Time Tracking of the Buses for Birmingham, AL</description>
    <author email="line72@line72.net" href="http://line72.net">
        Marcus Dillavou
    </author>
    <content src="https://birmingham.gotransitapp.com/index.html" />
    <access origin="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="152" src="/favicon.ico" width="152" />
        <icon height="144" src="/favicon.ico" width="144" />
        <icon height="72" src="/favicon.ico" width="72" />
    </platform>
    <preference name="Fullscreen" value="false" />
    <allow-navigation hap-rule="yes" href="https://birmingham.gotransitapp.com/*" />
    <platform name="windows">
    </platform>
    <platform name="wp8">
    </platform>
</widget>